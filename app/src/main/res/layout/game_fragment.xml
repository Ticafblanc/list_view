<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Game">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/secondPlayerButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Player 2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/firstPlayerButton" />

        <Button
            android:id="@+id/firstPlayerButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="player 1"
            app:layout_constraintBottom_toTopOf="@+id/secondPlayerButton"
            app:layout_constraintEnd_toEndOf="@+id/secondPlayerButton"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/secondPlayerButton"
            app:layout_constraintTop_toBottomOf="@+id/pioche_Button" />

        <Button
            android:id="@+id/pioche_Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="pioche"
            app:layout_constraintBottom_toTopOf="@+id/firstPlayerButton"
            app:layout_constraintEnd_toEndOf="@+id/firstPlayerButton"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/firstPlayerButton"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>